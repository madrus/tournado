{
  "servers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "/Users/madrus/dev/biz/toernooien/tournado"
      ],
      "type": "stdio"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/madrus/dev/biz/toernooien/tournado"
      ]
    },
    "playwright": { "command": "npx", "args": ["-y", "@playwright/mcp@latest"] },
    "epicshop": { "command": "npx", "args": ["-y", "@epic-web/workshop-mcp@latest"] },
    "vitest-runner": {
      "command": "npx",
      "args": ["-y", "@madrus/vitest-mcp-server@latest"],
      "env": { "VITEST_PROJECT_DIR": "." }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "context7": { "url": "https://mcp.context7.com/mcp" },
    "MCP_DOCKER": {
      "command": "docker",
      "args": ["mcp", "gateway", "run"],
      "type": "stdio"
    }
  }
}
