{
  "name": "tournado",
  "version": "0.4.1",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/madrus/tournado.git"
  },
  "scripts": {
    "build": "react-router build",
    "prebuild": "prisma generate",
    "commit": "git add . && pnpm git-cz",
    "release": "standard-version",
    "push": "git push --follow-tags",
    "sync": "git fetch madrus main && git merge madrus/main",
    "dev": "react-router dev",
    "dev:mocks": "react-router dev -c \"pnpm dev:serve\"",
    "dev:serve": "NODE_OPTIONS=\"--import ./mocks/index.js\" react-router-serve ./build/server/index.js",
    "docs": "docsify serve docs -o -p 3030",
    "format": "prettier --write .",
    "format-ci": "pretty-quick --staged",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "react-router typegen && tsc",
    "pretypecheck": "rm -rf node_modules/.prisma && prisma generate",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "react-router-serve ./build/server/index.js",
    "start:mocks": "NODE_OPTIONS=\"--import ./mocks/index.js\" react-router-serve ./build/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:all": "start-server-and-test dev http://localhost:5173 'playwright test'",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:run": "playwright test teams.spec.ts --reporter=html",
    "pretest:e2e:run": "pnpm build",
    "mcp:vitest": "node mcp-servers/vitest/dist/index.js",
    "mcp:inspect": "npx @modelcontextprotocol/inspector node mcp-servers/vitest/dist/index.js",
    "prepare": "husky",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "postinstall": "husky && ([ -f prisma/schema.prisma ] && prisma generate || true)",
    "validate": "npm-run-all2 --parallel test lint typecheck",
    "prisma:test": "tsx test/prisma-test.ts",
    "db:reset:staging": "flyctl ssh console --app tournado-staging -C \"npx prisma migrate reset --force\"",
    "db:reset:production": "flyctl ssh console --app tournado -C \"npx prisma migrate reset --force\""
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@react-router/dev": "^7.6.2",
    "@react-router/fs-routes": "^7.6.2",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@types/glob": "^8.1.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "glob": "^11.0.2",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "isbot": "^5.1.28",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "react-router": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.25.61",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@madrus/configs": "^3.1.0",
    "@playwright/test": "^1.53.0",
    "@react-router/dev": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.0.0",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "3.1.3",
    "commitizen": "^4.3.1",
    "cookie": "^1.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.4",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.13.3",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.5.1",
    "git-cz": "^4.9.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "memfs": "^4.17.2",
    "msw": "^2.10.2",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.4",
    "postcss-nesting": "^13.0.2",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "pretty-quick": "^4.2.2",
    "prisma": "^6.9.0",
    "react-router-devtools": "^5.0.6",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^4.1.8",
    "tailwindcss-animate": "^1.0.7",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.1.3",
    "wait-on": "^8.0.3"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "overrides": {
    "vitest": "3.1.3",
    "@vitest/coverage-v8": "3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
