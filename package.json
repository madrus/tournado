{
	"name": "tournado",
	"version": "0.10.3",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/madrus/tournado.git"
	},
	"scripts": {
		"build": "react-router typegen && react-router build",
		"commit": "git add . && pnpm git-cz",
		"db:reset:local": "npx prisma migrate reset --force",
		"db:reset:production": "flyctl ssh console --app tournado -C \"npx prisma migrate reset --force\"",
		"db:reset:staging": "flyctl ssh console --app tournado-staging -C \"npx prisma migrate reset --force\"",
		"dev": "react-router dev",
		"dev:mocks": "react-router dev -c \"pnpm dev:serve\"",
		"dev:serve": "NODE_OPTIONS=\"--import tsx/esm --import ./test/mocks/index.ts\" react-router-serve ./build/server/index.js",
		"dev:test": "PLAYWRIGHT=true DATABASE_URL=file:./prisma/data-test.db?connection_limit=1 react-router dev --port 8811",
		"docs": "docsify serve docs -o -p 3030",
		"docs:check": "tsx scripts/check-docs-code-style.ts --fix",
		"env:check": "tsx scripts/validate-env.ts local",
		"env:check:ci": "tsx scripts/validate-env.ts ci",
		"env:check:e2e": "tsx scripts/validate-env.ts e2e",
		"env:check:prod": "tsx scripts/validate-env.ts production",
		"knip": "knip",
		"lint": "biome lint .",
		"lint:check": "biome check .",
		"lint:fix": "biome lint --write --unsafe .",
		"format": "biome check --write .",
		"migrate:admin-roles": "tsx scripts/migrate-admin-roles.ts",
		"postinstall": "husky && ([ -f prisma/schema.prisma ] && prisma generate || true)",
		"prebuild": "prisma generate",
		"predev:test": "PLAYWRIGHT=true DATABASE_URL=file:./prisma/data-test.db?connection_limit=1 prisma migrate deploy",
		"prepare": "husky",
		"pretest": "prisma generate",
		"pretest:e2e:run": "DISABLE_PWA=true pnpm build",
		"pretest:run": "prisma generate",
		"pretypecheck": "prisma generate",
		"prisma:seed": "node prisma/seed.js",
		"prisma:seed:superadmins": "node prisma/seedSuperAdmins.js",
		"prisma:studio": "DATABASE_URL=\"file:./prisma/data.db\" pnpm prisma studio",
		"prisma:test": "tsx test/prisma-test.ts",
		"push": "git push --follow-tags",
		"reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
		"release": "standard-version",
		"setup": "prisma generate && prisma migrate deploy && prisma db seed",
		"start": "react-router-serve ./build/server/index.js",
		"start:mocks": "NODE_OPTIONS=\"--import tsx/esm --import ./test/mocks/index.ts\" react-router-serve ./build/server/index.js",
		"start:test": "PLAYWRIGHT=true PORT=8811 pnpm start:mocks",
		"sync": "git fetch madrus main && git merge madrus/main",
		"test": "pnpm test:run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "PLAYWRIGHT=true start-server-and-test 'node scripts/e2e-server.js' http://localhost:8811 'playwright test'",
		"test:e2e:built": "pnpm build && PLAYWRIGHT=true start-server-and-test 'node scripts/e2e-server-built.js' http://localhost:8811 'playwright test'",
		"test:e2e:force": "lsof -ti:8811 | xargs kill -9 2>/dev/null || true && pnpm test:e2e",
		"test:e2e:ui": "PLAYWRIGHT=true start-server-and-test 'node scripts/e2e-server.js' http://localhost:8811 'playwright test --ui'",
		"test:run": "vitest run",
		"test:watch": "vitest",
		"test:docker": "bash scripts/test-docker-build.sh",
		"typecheck": "react-router typegen && tsc",
		"verify": "pnpm lint && pnpm typecheck && pnpm test"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/modifiers": "^9.0.0",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@prisma/adapter-better-sqlite3": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/themes": "^3.2.1",
		"@react-email/components": "^1.0.3",
		"@react-email/render": "^2.0.1",
		"@react-router/fs-routes": "^7.11.0",
		"@react-router/node": "7.11.0",
		"@react-router/serve": "7.11.0",
		"@tanstack/react-table": "^8.21.3",
		"better-sqlite3": "^12.5.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"core-js": "^3.47.0",
		"dotenv": "^17.2.3",
		"firebase": "^12.7.0",
		"firebase-admin": "^13.6.0",
		"glob": "^13.0.0",
		"i18next": "^25.7.3",
		"i18next-browser-languagedetector": "^8.2.0",
		"isbot": "^5.1.32",
		"modern-normalize": "^3.0.1",
		"nanoid": "^5.1.6",
		"pino": "^10.1.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-i18next": "^16.5.1",
		"react-router": "7.11.0",
		"resend": "^6.6.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"tiny-invariant": "^1.3.3",
		"zod": "^4.3.5",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@faker-js/faker": "^10.2.0",
		"@playwright/test": "^1.57.0",
		"@react-router/dev": "7.11.0",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.0.3",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "4.0.16",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"docsify-cli": "^4.4.4",
		"git-cz": "^4.9.0",
		"happy-dom": "^20.0.11",
		"husky": "^9.1.7",
		"memfs": "^4.51.1",
		"msw": "^2.12.7",
		"pino-pretty": "^13.1.3",
		"prisma": "^7.2.0",
		"standard-version": "^9.5.0",
		"start-server-and-test": "^2.1.3",
		"tailwindcss": "^4.1.18",
		"tailwindcss-animate": "^1.0.7",
		"tsconfig-paths": "4.2.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-pwa": "^1.2.0",
		"vite-tsconfig-paths": "^6.0.3",
		"vitest": "4.0.16",
		"wait-on": "^9.0.3"
	},
	"prisma": {
		"seed": "node prisma/seed.js"
	},
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"node": ">=22",
		"pnpm": ">=10"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"msw": {
		"workerDirectory": [
			"",
			"public"
		]
	}
}
