{
  "name": "tournado",
  "version": "0.2.1",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/madrus/tournado.git"
  },
  "scripts": {
    "build": "remix build",
    "commit": "git add . && npx git-cz",
    "dev": "remix dev -c \"npm run dev:serve\"",
    "dev:serve": "NODE_OPTIONS=\"--import ./mocks/index.js\" remix-serve ./build/index.js",
    "docs": "docsify serve docs -o -p 3030",
    "format": "prettier --write .",
    "format-ci": "pretty-quick --staged",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve ./build/index.js",
    "start:mocks": "NODE_OPTIONS=\"--import ./mocks/index.js\" remix-serve ./build/index.js",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc && tsc -p cypress",
    "postinstall": "husky",
    "prepare": "husky",
    "push": "git push --follow-tags",
    "release": "standard-version",
    "validate": "npm-run-all --parallel \"test -- --run\" lint typecheck test:e2e:run"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@prisma/client": "^6.6.0",
    "@remix-run/css-bundle": "^2.16.5",
    "@remix-run/node": "^2.16.5",
    "@remix-run/react": "^2.16.5",
    "@remix-run/serve": "^2.16.5",
    "bcryptjs": "^3.0.2",
    "isbot": "^5.1.26",
    "react": "18",
    "react-dom": "18",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@madrus/configs": "^1.6.1",
    "@remix-run/dev": "^2.16.5",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.14.1",
    "@types/react": "18.3.20",
    "@types/react-dom": "18.3.6",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.1",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cookie": "^1.0.2",
    "cross-env": "^7.0.3",
    "cypress": "^14.3.1",
    "docsify-cli": "^4.4.4",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.3",
    "eslint-plugin-cypress": "^4.2.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "git-cz": "^4.9.0",
    "happy-dom": "^17.4.4",
    "husky": "^9.1.7",
    "lightningcss": "1.29.3",
    "msw": "^2.7.5",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "pretty-quick": "^4.1.1",
    "prisma": "^6.6.0",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^2.0.11",
    "tailwindcss": "^3.4.17",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.2",
    "vite-plugin-pwa": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
