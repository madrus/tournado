{
  "name": "tournado",
  "version": "0.8.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/madrus/tournado.git"
  },
  "scripts": {
    "build": "react-router typegen && react-router build",
    "commit": "git add . && pnpm git-cz",
    "db:reset:local": "npx prisma migrate reset --force",
    "db:reset:production": "flyctl ssh console --app tournado -C \"npx prisma migrate reset --force\"",
    "db:reset:staging": "flyctl ssh console --app tournado-staging -C \"npx prisma migrate reset --force\"",
    "dev:mocks": "react-router dev -c \"pnpm dev:serve\"",
    "dev:serve": "NODE_OPTIONS=\"--import ./mocks/index.js\" react-router-serve ./build/server/index.js",
    "dev": "react-router dev",
    "docs": "docsify serve docs -o -p 3030",
    "format-ci": "pretty-quick --staged",
    "format": "prettier --write .",
    "knip": "knip",
    "lint": "pnpm format && eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "mcp:inspect": "npx @modelcontextprotocol/inspector node mcp-servers/vitest/dist/index.js",
    "mcp:vitest": "node mcp-servers/vitest/dist/index.js",
    "postinstall": "husky && ([ -f prisma/schema.prisma ] && prisma generate || true)",
    "prebuild": "prisma generate",
    "prepare": "husky",
    "pretest:e2e:run": "pnpm build",
    "pretest": "prisma generate",
    "pretypecheck": "rm -rf node_modules/.prisma && prisma generate",
    "prisma:seed": "node prisma/seed.js",
    "prisma:test": "tsx test/prisma-test.ts",
    "push": "git push --follow-tags",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "release": "standard-version",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start:mocks": "NODE_OPTIONS=\"--import ./mocks/index.js\" react-router-serve ./build/server/index.js",
    "start": "react-router-serve ./build/server/index.js",
    "sync": "git fetch madrus main && git merge madrus/main",
    "test": "pnpm test:run",
    "test:coverage": "vitest run --coverage",
    "test:e2e:all": "PLAYWRIGHT_TEST=true start-server-and-test dev http://localhost:5173 'playwright test'",
    "test:e2e:built:debug": "pnpm build && PLAYWRIGHT_TEST=true PORT=3000 start-server-and-test start http://localhost:3000 'playwright test --debug'",
    "test:e2e:built:headed": "pnpm build && PLAYWRIGHT_TEST=true PORT=3000 start-server-and-test start http://localhost:3000 'playwright test --headed'",
    "test:e2e:built:ui": "pnpm build && PLAYWRIGHT_TEST=true PORT=3000 start-server-and-test start http://localhost:3000 'playwright test --ui'",
    "test:e2e:built": "pnpm build && PLAYWRIGHT_TEST=true PORT=3000 start-server-and-test start http://localhost:3000 'playwright test'",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:run": "playwright test teams.spec.ts --reporter=html",
    "test:e2e": "PLAYWRIGHT_TEST=true playwright test",
    "pretest:run": "prisma generate",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "typecheck": "react-router typegen && tsc",
    "validate": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/themes": "^3.2.1",
    "@react-email/components": "^0.3.3",
    "@react-email/render": "^1.1.4",
    "@react-router/dev": "^7.7.1",
    "@react-router/fs-routes": "^7.7.1",
    "@react-router/node": "^7.7.1",
    "@react-router/serve": "^7.7.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "firebase": "^12.2.1",
    "glob": "^11.0.3",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "isbot": "^5.1.29",
    "modern-normalize": "^3.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-email": "^4.2.5",
    "react-i18next": "^15.6.1",
    "react-router": "^7.7.1",
    "resend": "^4.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tiny-invariant": "^1.3.3",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@madrus/configs": "^3.1.0",
    "@playwright/test": "^1.54.1",
    "@react-router/dev": "^7.7.1",
    "@react-router/serve": "^7.7.1",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.6.3",
    "git-cz": "^4.9.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "memfs": "^4.24.0",
    "msw": "^2.10.4",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "pretty-quick": "^4.2.2",
    "prisma": "^6.14.0",
    "react-router-devtools": "^5.0.6",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vite-plugin-pwa": "^1.0.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.2.4",
    "wait-on": "^8.0.4"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "node": ">=22",
    "pnpm": ">=10"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
